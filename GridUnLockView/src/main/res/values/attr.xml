<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <declare-styleable name="GridLockView" tools:ignore="ResourceName">
        <!--普通状态下圈的颜色-->
        <attr name="color_up_ring" format="color" />
        <!--按下状态下圈的颜色-->
        <attr name="color_on_ring" format="color" />
        <!--错误时的颜色-->
        <attr name="color_error_ring" format="color" />
        <!--正常连接线颜色-->
        <attr name="connecting_line_color" format="color" />
        <!--发生错误时连接线颜色-->
        <attr name="connecting_line_error_color" format="color" />

        <!--内圆颜色-->
        <attr name="inner_ring_color" format="color" />
        <!--内圆背景圆颜色-->
        <attr name="inner_ring_background_color" format="color" />
        <!--内圆错误状态下颜色-->
        <attr name="inner_ring_error_color" format="color" />
        <!--内圆背景圆错误状态下颜色-->
        <attr name="inner_ring_background_error_color" format="color" />

        <!--外圈与外圈之间的间距-->
        <attr name="outer_ring_spacing_width" format="dimension" />
        <!--外圈未按下时线宽度-->
        <attr name="outer_ring_un_finger_line_width" format="dimension" />
        <!--外圈按下时线宽度-->
        <attr name="outer_ring_finger_line_width" format="dimension" />
        <!--内圆大小-->
        <attr name="inner_ring_width" format="dimension" />
        <!--内圆背景大小-->
        <attr name="inner_ring_background_width" format="dimension" />
        <!--连接线宽度-->
        <attr name="connecting_line_width" format="dimension" />
        <!--解锁连接线，是否绘制在圆圈上层       -->
        <attr name="is_line_in_on_circle_top" format="boolean" />
        <!--是否显示绘制时，连线方向箭头-->
        <attr name="is_show_direction_arrow" format="boolean" />

    </declare-styleable>


</resources>